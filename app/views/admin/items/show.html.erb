<div class="container">
  <div class="main-container">
    <h1>商品 詳細画面</h1>
    <div class="item">
      <div class="item-image">
        <% if @item.image_id.nil? %>
          <div class="item-image-empty">
            <div>No image</div>
          </div>
        <% else %>
          <div class="item-image-preview image-preview">
            <%= image_tag attachment_url(@item, :image, :fill, 200, 150, format: "jpg") %>
          </div>
        <% end %>
      </div>
      <div class="item-info">
        <div class="field">
          <label for="" class="">商品名</label>
          <%= @item.name %>
        </div>
        <div class="field">
          <label for="" class="">商品説明</label>
          <%= simple_format @item.description %>
        </div>
        <div class="field">
          <label for="" class="">ジャンル</label>
          <%= @item.genre.name %>
        </div>
        <div class="field">
          <label for="" class="">税込価格(税抜価格)</label>
          <%= @item.price_with_tax.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円
        </div>
        <div class="field">
          <label for="" class="">販売ステータス</label>
          <%= @item.sales_status_i18n %>
        </div>
      </div>
      <div class="buttons">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "button is-info" %>
      </div>
    </div>
  </div>
</div>
