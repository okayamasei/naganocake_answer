<div class="container">
  <div class="main-container">
    <h1>ジャンル追加・一覧画面</h1>
    <div class="genre">
      <%= render "admin/genres/form", genre: @genre, path: admin_genres_path, button_text: "追加" %>
    </div>
    <div class="genres">
      <table>
        <thead>
          <tr>
            <th class="th-left">ジャンル</th>
            <th class="th-left">状態</th>
            <th class="th-left"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="td-left"><%= genre.name %></td>
              <td class="td-left"><%= genre.is_valid_i18n %></td>
              <td class="td-left"><%= link_to "編集する", edit_admin_genre_path(genre), class: "button is-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
