<%= form_with model: genre, url: path, local: true, builder: CustomFormBuilder do |f| %>
  <%= render "admin/shared/error_messages", resource: f.object %>
  <div class="field">
    <label for="" class="">ジャンル</label>
    <%= f.text_field :name, autocomplete: "name", class: "input" %>
    <label>
      <%= f.radio_button :is_valid, "valid_genre", disabled: false %>
      有効
    </label>
    <label>
      <%= f.radio_button :is_valid, "invalid_genre", disabled: false %>
      無効
    </label>
    <%= f.submit button_text, class: "button is-info" %>
  </div>
<% end %>
