<div class="container">
  <div class="main-container sign-in">

    <h1>新規会員登録</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="columns">
        <div class="column is-2">
          <label for="" class="label">名前</label>
        </div>
        <div class="column is-2 has-text-right">
          <%= f.label :family_name, autofocus: true, class: "label" %>
        </div>
        <div class="column is-3">
          <%= f.text_field :family_name, autocomplete: "family_name", class: "input" %>
        </div>
        <div class="column is-2 has-text-right">
          <%= f.label :first_name, class: "label" %>
        </div>
        <div class="column is-3">
          <%= f.text_field :first_name, autocomplete: "first_name", class: "input" %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <label for="" class="label">フリガナ</label>
        </div>
        <div class="column is-2 has-text-right">
          <%= f.label :family_name_kana, class: "label" %>
        </div>
        <div class="column is-3">
          <%= f.text_field :family_name_kana, autocomplete: "family_name_kana", class: "input" %>
        </div>
        <div class="column is-2 has-text-right">
          <%= f.label :first_name_kana, class: "label" %>
        </div>
        <div class="column is-3">
          <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "input" %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-4">
          <%= f.label :email, class: "label" %>
        </div>
        <div class="column">
          <%= f.email_field :email, autocomplete: "email", class: "input" %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-4">
          <%= f.label :zip_code, class: "label" %>
        </div>
        <div class="column">
          <%= f.text_field :zip_code, autocomplete: "zip_code", class: "input" %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-4">
          <%= f.label :address, class: "label" %>
        </div>
        <div class="column">
          <%= f.text_field :address, autocomplete: "address", class: "input" %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-4">
          <%= f.label :tel, class: "label" %>
        </div>
        <div class="column">
          <%= f.text_field :tel, autocomplete: "tel", class: "input" %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-4">
          <%= f.label :password, class: "label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div class="column">
          <%= f.password_field :password, autocomplete: "password", class: "input" %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-4">
          <%= f.label :password_confirmation, class: "label" %>
        </div>
        <div class="column">
          <%= f.password_field :password_confirmation, autocomplete: "password_confirmation", class: "input" %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-4">
        </div>
        <div class="column">
          <%= f.submit "新規登録", class: "button is-info" %>
        </div>
      </div>
    <% end %>

    <%= render "end_users/shared/links" %>
  </div>
</div>
