<div class="container">
  <div class="main-container">
    <div class="public-orders">
      <div class="public-orders-header">
        <div>
          <h1 class="h1-primary">注文履歴一覧</h1>
        </div>
      </div>

      <div class="public-orders-main">
        <table class="table-primary">
          <thead>
            <tr class="tr-primary tr-header">
              <th class="th-left">注文日</th>
              <th class="th-left">配送先</th>
              <th class="th-left">注文商品</th>
              <th class="th-left">支払金額</th>
              <th class="th-left">ステータス</th>
              <th class="th-left">注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr class="tr-primary">
                <td class="td-left"><%= order.created_at.strftime("%Y/%m/%d") %></td>
                <td class="td-left">
                  <%= order.zip_code %> <%= order.address %><br>
                  <%= order.destination %>
                </td>
                <td class="td-left">
                  <% order.order_items.each do |order_item| %>
                    <%= order_item.item.name %><br>
                  <% end %>
                </td>
                <td class="td-left"><%= order.amount.to_s(:delimited) %></td>
                <td class="td-left"><%= order.order_status_i18n %></td>
                <td class="td-left"><%= link_to "表示する", orders_show_path(id: order.id), class: "button is-info" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
